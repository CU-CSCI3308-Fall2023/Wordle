{
    "compilerOptions": {
        "target": "esNext",
        "module": "commonjs",
        "allowJs": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "include": ["views", "tests", "scripts"]
}
