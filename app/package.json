  "version": "0.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.ts",
    "pretest:docker": "npm ci",
    "test:docker": "mocha --require ts-node/register tests/**/*.spec.ts",
    "test": "mocha --require ts-node/register tests/**/*.spec.ts",
    "prebuild": "rimraf dist",
