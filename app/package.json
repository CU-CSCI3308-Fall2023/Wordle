    "body-parser": "^1.20.2",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mocha": "^10.2.0",
    "pg-promise": "^11.5.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.4",
    "@types/chai": "^4.3.10",
    "@types/command-line-args": "^5.2.2",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.4",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.9",
    "@types/mocha": "^10.0.4",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
